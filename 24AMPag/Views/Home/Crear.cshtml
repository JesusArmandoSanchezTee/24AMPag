@model _24AMPag.Models.Usuario

@{
	ViewData["Title"] = "Crear Usuario";
}


@*
 
<h1>
	@ViewData["Title"]
</h1>*@

<div  class="container-fluid">
    <div class="offset-12"> 
        <div class="card border">|
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Nuevo Usuario</strong></h1>

            </div>

            <div class="card-body">

                <form asp-action="Crear" method="post">
                    <div class="form-group">
                        <label asp-for="Nombrer">Nombre</label>
                        <input asp-for="Nombrer" class="form-control" placeholder="Ingresar Nombre" required></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="User">User</label>
                        <input asp-for="User" class="form-control" placeholder="Ingresar User" required></input>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"> Contraseña </label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresar Contraseña" required></input>
                    </div>

                   <div class="container-fluid">
						<button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-plus"></i> Crear</button>
				   </div>


                </form>

                </br>

                <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-arrow-rotate-left"></i> Volver</a>

             
            </div>


        </div>


    </div>




</div>

</div>
